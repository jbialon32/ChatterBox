<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="@color/colorWhite"
    android:clipToPadding="false">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBlueGray"
        android:padding="4dp" />

    <TextView
        android:id="@+id/message_body"
        android:layout_width="206dp"
        android:layout_height="61dp"
        android:padding="4dp"
        android:singleLine="true"
        android:text="Placeholder Friend Name"
        android:textColor="@color/colorBlack"
        android:textSize="24sp" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="100dp"
        android:layout_height="61dp"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_toEndOf="@+id/message_body"
        android:layout_toRightOf="@+id/message_body"
        android:text="ADD" />

    <Button
        android:id="@+id/denyBtn"
        android:layout_width="100dp"
        android:layout_height="61dp"
        android:layout_marginStart="-6dp"
        android:layout_marginLeft="-6dp"
        android:layout_toEndOf="@+id/addBtn"
        android:layout_toRightOf="@+id/addBtn"
        android:text="DENY" />

</RelativeLayout>
