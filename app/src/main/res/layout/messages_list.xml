<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".chatroomActivity"
    android:background="@color/colorWhite"
    tools:showIn="@layout/activity_chatrooms">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:focusableInTouchMode="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ListView
            android:id="@+id/messages_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorWhite"
            android:divider="@color/colorBlueGray" />

        <!-- A few temporary messages to test the UI; remove soon
        <include layout="@layout/message"/>
        <include layout="@layout/message"/>
        <include layout="@layout/message"/>
        <include layout="@layout/message"/>
        <include layout="@layout/message"/>
        <include layout="@layout/message"/>
        <include layout="@layout/message"/>
        <include layout="@layout/message"/>-->

        <!-- a spacer so that the message box doesn't overlap the messages -->
        <TextView
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Placeholder message that is very very very very very very very very very long"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


